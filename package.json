{
  "name": "github-action-typescript-template",
  "version": "0.0.0",
  "private": true,
  "description": "A template for creating a GitHub Action written in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "lint:check": "eslint src/**/*.ts",
    "build": "ncc build src/main.ts --license licenses.txt",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nelsoncanarinho/typescript-action"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Cloud Posse LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "1.10.0"
  },
  "devDependencies": {
    "@types/jest": "29.1.1",
    "@types/node": "18.7.23",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "@vercel/ncc": "0.34.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.0.4",
    "jest": "29.1.2",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4"
  }
}
